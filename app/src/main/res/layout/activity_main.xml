<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="239dp"
        android:layout_height="55dp"
        android:text="Crédito hipotecario en Colombia"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="99dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="343dp"
        android:layout_height="38dp"
        android:text="Esta tasa depende e tu historial crediticio y del banco en el que pidas el crédito"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="594dp" />

    <TextView
        android:id="@+id/valor_propiedad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:textColor="#FF0000"
        android:text="* Valor de la propiedad"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="80dp" />


    <EditText
        android:id="@+id/editTextNumber2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="225dp" />

    <TextView
        android:id="@+id/plazo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:text="* ¿A qué plazo necesitas el crédito(años)?"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="377dp" />

    <TextView
        android:id="@+id/valor_prestamo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:text="* Cuanto necesitas?"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="206dp" />

    <EditText
        android:id="@+id/editTextNumber3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="396dp" />

    <TextView
        android:id="@+id/tasa_interes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:text="* A que tasa de interés efectiva anual(TAE)?"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="530dp" />

    <EditText
        android:id="@+id/editTextNumberDecimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="549dp" />

    <Button
        android:id="@+id/boton_simular"
        android:layout_width="347dp"
        android:layout_height="56dp"
        android:backgroundTint="#F44336"
        android:text="Simular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="671dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="347dp"
        android:layout_height="69dp"
        android:text="Van desde los 5 hasta los 20 años. El plazo más común es de 20 años."
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="441dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="366dp"
        android:layout_height="75dp"
        android:text="El préstamo mínimo es de %50'000.000 y no puede exceder el 70% del valor de la propiedad para créditos hipotecarios, mientras que para el leasing habitacional no puede exceder el 80% del valor de la propiedad."
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="270dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="371dp"
        android:layout_height="23dp"
        android:text="Valor de la propiedad no puede ser inferior a $7'000.0000"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="144dp" />

    <TextView
        android:id="@+id/resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        tools:layout_editor_absoluteX="166dp"
        tools:layout_editor_absoluteY="738dp" />

</androidx.constraintlayout.widget.ConstraintLayout>